VARIABLE upbuttons ( 1 bit per floor )
VARIABLE downbuttons ( 1 bit per floor )
VARIABLE floorbuttons ( 1 bit per floor )
VARIABLE currentfloor ( 0 based )
VARIABLE direction ( 0 = idle, 1 = up, 2 = down )
VARIABLE pnumberoffloors
VARIABLE outstate

6 pnumberoffloors !

VARIABLE pdestinationfloor
VARIABLE pbetweenfloorpos // 0 = at a floor
VARIABLE pnumberofstepsbetweenfloors // 0 = none

0 pnumberofstepsbetweenfloors !

0 CONSTANT idle
1 CONSTANT goingup
2 CONSTANT goingdown

: numberoffloors pnumberoffloors @ ;


: UMAXEXCEPT-1 ( floor1|-1 floor2|-1 -- floor1|floor2|-1 )
    DUP -1 = IF ( if floor2 is -1, return floor1 )
      DROP EXIT
    THEN
    SWAP DUP -1 = IF ( if floor1 is -1, return floor2 )
      DROP EXIT
    THEN
    UMAX  
;


: reset ( -- )
    0 upbuttons !
    0 downbuttons !
    0 floorbuttons !
    0 currentfloor !
    idle direction !
    0 pbetweenfloorpos !
    0 pdestinationfloor !
    0 pnumberofstepsbetweenfloors !
    0 outstate !
;

reset

: pressupbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U upbuttons @ OR upbuttons !
    THEN ;


: pressdownbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U downbuttons @ OR downbuttons !
    THEN ;


: pressfloorbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U floorbuttons @ OR floorbuttons !
    THEN ;


: clearupbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U INVERT upbuttons @ AND upbuttons !
    THEN ;


: cleardownbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U INVERT downbuttons @ AND downbuttons !
    THEN ;


: clearfloorbutton ( floor -- )
    DUP numberoffloors U>= IF
      DROP
    ELSE
      2^U INVERT floorbuttons @ AND floorbuttons !
    THEN ;


: downmask ( floornumber -- downmask )
    DUP numberoffloors U>= IF
      DROP 0
    ELSE
      ULOMASK 
    THEN ; // floor 0 = 0 bit, floor 1 = 1 bit 


: upmask ( floornumber -- upmask ) 
    DUP numberoffloors U>= IF
      DROP 0
    ELSE
      1+ ULOMASK INVERT
      numberoffloors ULOMASK AND
    THEN ;


: lowestfloorset ( upmask -- floornumber ) LOBIT ;


: highestfloorset ( downmask -- floornumber ) HIBIT ;


: ?anyhigherbuttons ( -- flag ) 
    currentfloor @ upmask upbuttons @ AND
    currentfloor @ upmask downbuttons @ AND OR
    currentfloor @ upmask floorbuttons @ AND OR 
    0<> ;


: ?anylowerbuttons ( -- flag ) 
    currentfloor @ downmask upbuttons @ AND
    currentfloor @ downmask downbuttons @ AND OR
    currentfloor @ downmask floorbuttons @ AND OR 
    0<> ;


: ?currentfloor ( -- currentfloor|-1 ) 
    
    currentfloor @ 2^U floorbuttons @ AND ( -- flag )  // someone pressed same floor button to get out
    0<> IF
      currentfloor @
      EXIT
    THEN

    direction @ goingup = IF
      currentfloor @ 2^U upbuttons @ AND ( -- flag ) // someone pressed the up button before it left
      0<> IF
        currentfloor @
      ELSE
        -1
      THEN
      EXIT
    THEN

    direction @ goingdown = IF
      currentfloor @ 2^U downbuttons @ AND ( -- flag ) // someone pressed the down button before it left
      0<> IF
        currentfloor @
      ELSE
        -1
      THEN
      EXIT
    THEN
    // idle case
    currentfloor @ 2^U upbuttons @ AND ( -- flag ) // someone pressed the up button when elevator was idle
    currentfloor @ 2^U downbuttons @ AND OR // someone pressed the down button when elevator was idle
    0<> IF
      currentfloor @
      EXIT
    THEN
    -1 
;


// looks for first up or floor pressed above current floor
: findnearestgoingup ( -- lowesthigherfloor|-1 ) 
    currentfloor @ upmask upbuttons @ AND LOBIT ( lowestupbuttonfloor-1|-1 -- )
    currentfloor @ upmask floorbuttons @ AND LOBIT ( lowestupbuttonfloor|-1 lowestfloorbuttonfloor|-1 -- ) 
    UMIN ;


// looks for first down or floor pressed below current floor
: findnearestgoingdown ( -- highestlowerfloor|-1) 
     ( downmask -- highestdownbuttonfloor+1|-1 )
    currentfloor @ downmask downbuttons @ AND HIBIT ( downmask  -- )
    currentfloor @ downmask floorbuttons @ AND HIBIT  
    UMAXEXCEPT-1 ;


: findhighestgoingdown ( -- floornumber|-1 )
    downbuttons @ HIBIT ( floor|-1 )
    DUP currentfloor @ U<= IF
      DROP -1
    THEN ;


: findlowestgoingup ( -- floornumber|-1 )
    upbuttons @ LOBIT 
    DUP currentfloor @ U>= IF
      DROP -1
    THEN ;


: findnextdirectionidlefloor ( -- floornumber|-1 )
    goingup direction !
    ?currentfloor DUP -1 = IF
      DROP
      // leave direction up
      findnearestgoingup DUP -1 = IF
        DROP
        goingdown direction !
        ?currentfloor DUP -1 = IF
          DROP
          // leave direction down
          findnearestgoingdown DUP -1 = IF
            DROP
            goingup direction !
            findhighestgoingdown DUP -1 = IF
              DROP
              goingdown direction !
              findlowestgoingup DUP -1 = IF
                idle direction !
              THEN
            THEN
          THEN
        THEN
      THEN
    THEN ;


: findnextdirectionupfloor ( -- floornumber|-1 )
    goingup direction !  // should already be goingup... but just in case
    ?currentfloor DUP -1 = IF
      DROP
      // leave direction up
      findnearestgoingup DUP -1 = IF
        DROP
        // leave direction up
        findhighestgoingdown DUP -1 = IF
          DROP
          goingdown direction !
          ?currentfloor DUP -1 = IF 
            DROP
            // leave direction down
            findnearestgoingdown DUP -1 = IF
              DROP
              // leave direction down
              findlowestgoingup DUP -1 = IF
                idle direction !
              THEN
            THEN
          THEN
        THEN
      THEN
    THEN ;


: findnextdirectiondownfloor ( -- floornumber|-1 )
    goingdown direction !  // should be going down already... but just in case
    ?currentfloor DUP -1 = IF
      DROP
      // leave direction down
      findnearestgoingdown DUP -1 = IF
        DROP
        // leave direction down
        findlowestgoingup DUP -1 = IF
          DROP
          goingup direction !
          ?currentfloor DUP -1 = IF
            DROP
            // leave direction up
            findnearestgoingup DUP -1 = IF
              DROP
              // leave direction up
              findhighestgoingdown DUP -1 = IF
                idle direction !
              THEN
            THEN
          THEN
        THEN
      THEN
    THEN ;

     
: findnextfloor ( -- nextfloor|-1 )
    direction @ idle = IF
      findnextdirectionidlefloor
    ELSE
      direction @ goingup = IF
        findnextdirectionupfloor
      ELSE
        findnextdirectiondownfloor
      THEN
    THEN
;


// the idea is to clear the buttons for the people the elevator is picking up
//  or dropping off
// arrive at floor went up to floor
//   clear floor button
//   if up button pressed, clear up button, picking up up button people
//   if up button not pressed and down button pressed, 
//      and no higher up or floor buttons pressed, clear down button
//      picking up down people

// arrive at floor went down to floor
//   clear floor button
//   if down button pressed, clear down button, picking up down button people
//   if down button not pressed and up button pressed,
//     and no lower down or floor buttons pressed, clear up button
//     picking up up people

// arrive at floor and went back to same floor
//   if it was because the floor button was pressed keep the direction the same
//     clear buttons as if elevator just did the old direction
//   else it was because both up and down were pressed and only one was cleared so
//     change to opposite direction and clear the button for the direction

: ?clearbuttonsforarrival // assumes you are at a floor...
    currentfloor @ clearfloorbutton // clear button of destination floor

    direction @ idle = IF ( no buttons pressed case, going nowhere )
      ( not really needed here... clearing all buttons )
      currentfloor @ clearupbutton
      currentfloor @ cleardownbutton
      EXIT
    THEN

    direction @ goingup = IF ( going to higher floor case )
      currentfloor @ 2^U upbuttons @ AND 0<> IF
        currentfloor @ clearupbutton
      ELSE
        ?anyhigherbuttons FALSE = IF
          currentfloor @ cleardownbutton
        THEN
      THEN
      EXIT
    THEN

    direction @ goingdown = IF ( going to lower floor case )
      currentfloor @ 2^U downbuttons @ AND 0<> IF
        currentfloor @ cleardownbutton
      ELSE
        ?anylowerbuttons FALSE = IF
          currentfloor @ clearupbutton
        THEN
      THEN
      EXIT
    THEN
;

: gotonextfloor ( nextfloor|-1 -- )
    DUP -1 = IF
      // probably don't need to do this...
      idle direction ! 
      DROP EXIT 
    THEN
    // currentfloor @ clearfloorbutton // clear button of old floor just in case
    currentfloor !
    ?clearbuttonsforarrival    
;


: incfloorpos
    currentfloor @ pnumberoffloors @ 1- U< IF
      goingup direction !
      pbetweenfloorpos @ pnumberofstepsbetweenfloors @ U< IF
        pbetweenfloorpos @ 1+ pbetweenfloorpos !
      ELSE
        0 pbetweenfloorpos !
        currentfloor @ 1+ currentfloor !
      THEN   
      EXIT
    THEN
    pnumberoffloors @ 1- currentfloor !
    0 pbetweenfloorpos !
;


: decfloorpos
    pbetweenfloorpos @ 0> IF 
      goingdown direction !
      pbetweenfloorpos @ 1- pbetweenfloorpos !
    ELSE
      currentfloor @ 0> IF
        currentfloor @ 1- currentfloor !
        pnumberofstepsbetweenfloors @ pbetweenfloorpos !
      THEN
    THEN   
;


: ?neednewdestination ( -- flag ) // 0 = at floor or no destination, -1 = below, 1 = above

  pdestinationfloor @ -1 = IF 
    0 EXIT 
  THEN // no destination case

  currentfloor @ pdestinationfloor @ U< IF 
    -1 EXIT
  THEN

  currentfloor @ pdestinationfloor @ U> IF
    1 EXIT
  THEN

  currentfloor @ pdestinationfloor @ = IF
    pbetweenfloorpos @ 0> IF
      1 EXIT
    THEN
    0
  THEN 
;

: teleportelevator ( -- ) 
    findnextfloor DUP pdestinationfloor !
    gotonextfloor
;

// move elevator towards destination
: moveelevatoronestep
    ?neednewdestination

    DUP outstate !
 
    DUP 0= IF
      // no destination or at destination case
        // if no destination... elevator might get stuck... 
      DROP EXIT
    THEN

    DUP -1 = IF
      incfloorpos
      DROP EXIT
    THEN
        
    1 = IF
      decfloorpos
      EXIT
    THEN

    // ?atdestination returned unknown result ... doing nothing...
;

: expresselevator // doesn't stop between destinations

    // if idle or at destination floor, find new destination
    ?neednewdestination 0= IF
      findnextfloor pdestinationfloor !
      pdestinationfloor @ -1 = IF 
        idle direction ! EXIT 
      THEN
    THEN

    moveelevatoronestep

    ?neednewdestination 0= IF
      ?clearbuttonsforarrival
    THEN
;

: nonexpresselevator // checks every floor
    pbetweenfloorpos @ 0= IF
      findnextfloor pdestinationfloor !
      pdestinationfloor @ -1 = IF 
        idle direction ! EXIT 
      THEN
    THEN

    moveelevatoronestep

    ?neednewdestination 0= IF
      ?clearbuttonsforarrival
    THEN
;

// donextstate
//   if elevatorstate = door closed idle
//     findnextfloor
//     if no floors found stay idle
//     if floors found... 
//       if same floor go to door open waiting 
//       if different floor go to door closed travelling and move one step towards destination floor
//   if elevatorstate = door open waiting
//     findnextfloor
//     if no floors found go to door closed idle
//     if floor found... shouldn't be same floor, 
//       go to door closed travelling and move one step towards destination floor
//   if elevatorstate = door closed travelling
//     if express, move one step towards destination floor, if arrived go to door open waiting
//     if not express, findnextfloor? move one step towards destination floor, if arrived go to
//       door open waiting...

: .direction ( -- )
    direction @ 0= IF
      ." idle"
      EXIT
    THEN
    direction @ 1 = IF
      ." going up"
      EXIT
    THEN
    direction @ 2 = IF
      ." going down"
      EXIT
    THEN
    ." wandering aimlessly among the stars" ;

: .elevatorstate ( -- )
    HEX
    CRLF ." current floor = " currentfloor @ U. ." out of ( 0-" numberoffloors 1- U. ." )" 
    CRLF ." direction     = " .direction
    CRLF ." up buttons    = " BASE @ >R 2 BASE ! upbuttons @ U. R> BASE !
    CRLF ." down buttons  = " BASE @ >R 2 BASE ! downbuttons @ U. R> BASE !
    CRLF ." floor buttons = " BASE @ >R 2 BASE ! floorbuttons @ U. R> BASE !
;

: go teleportelevator .elevatorstate ;


: welcome ( -- )

  ['] usingcgi ENDOFWORDLIST <> IF
    EXIT
  THEN

  CRLF ." Welcome to the DiaperGlu elevator simulator"
  CRLF ." For now you will need to imagine the elevator."
  CRLF ." There are 6 floors numbered 0 through 5."
  CRLF ." The buttons are shown in binary. Each bit is one button, bit 0 = floor 0."
  CRLF ." The commands are: "
  CRLF ."   reset ( -- ) ( already done, but just in case the elevator crashes... )
  CRLF ."   pressupbutton ( floornumber -- ) "
  CRLF ."   pressdownbutton ( floornumber -- )"
  CRLF ."   pressfloorbutton ( floornumber -- )"
  CRLF ."   .elevatorstate ( -- ) ( for if you want to see the buttons before you go )
  CRLF ."   go ( -- ) "
  CRLF ."   test"
  CRLF ."   .license"
  CRLF
  CRLF ." Press any number of buttons then press go. Repeat."
;

welcome


